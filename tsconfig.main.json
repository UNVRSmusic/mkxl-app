{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist/main",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@midi/*": ["src/midi/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/midi/**/*",
    "src/db/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/renderer"]
}
